<!DOCTYPE html>

<div ng-controller="OrganizationPanel">
    <h1>Cat√©gories</h1>
    <div class="col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Couleur</th>
                </tr>
            </thead>

            <tbody>
                <tr ng-repeat="category in categories">
                    <td>{{category.name}}</td>
                    <td><div class="col-md-4" style="background-color:{{category.color}}">{{category.color}}</div></td>
                </tr>
            </tbody>
        </table>

        <form ng-submit="addCategory()">
            <input ng-model="newCategory.name" type="text" name="name" placeholder="name" class="form-control" /> <br>
            <input ng-model="newCategory.color" type="text" name="color" placeholder="color" class="form-control" /> <br>
            <input type="submit" value="Ajouter" class="btn btn-primary" />
        </form>
    </div>
</div>

<script src="js/scroll.js"></script>