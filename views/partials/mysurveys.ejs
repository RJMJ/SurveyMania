            <input type="file" onchange="handleFiles(this.files)" accept="image/*" capture/>
        </div>
        <input type="text" placeholder="" id="resultField" class="form-control" ng-model="qrcode_result" ng-click="update()" readonly />
        <input type="text" placeholder="" class="form-control" ng-model="test" />
    </div>
</div>
   
