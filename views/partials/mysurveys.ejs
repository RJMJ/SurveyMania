            <video id="webcam" autoplay style="border: solid black 1px"></video>
            <canvas id="qr-canvas" style="display: none"></canvas>
        </div>

        <div id="add_survey_file" style="display: none">
            <p onclick="switchToWebcam()">Cliquez ici pour activer la cam√©ra</p>
