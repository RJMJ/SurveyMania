<!DOCTYPE html>
<script type="text/javascript" src="js/qrcode/llqrcode.js"></script>
<script type="text/javascript" src="js/qrcode/webqr.js"></script>

<div id="mySurveysMain" ng-controller="MySurveysController">
  	<h1 onclick="qrcodeInit()">Ajouter un sondage</h1>
    <div id="add_survey" style="display: none">
        <div id="add_survey_error" style="diplay: none"></div>

        <div id="add_survey_webcam" style="display: none">
            <div id="videoSourceDiv" class="select" style="display: none">
                <label>Video source: </label><select id="videoSource"></select>
            </div>
            <p onclick="switchToFile()">Cliquez ici pour importer une photo</p>
            <video id="webcam" autoplay style="border: solid black 1px"></video>
            <canvas id="qr-canvas" style="display: none"></canvas>
        </div>

        <div id="add_survey_file" style="display: none">
            <p onclick="switchToWebcam()">Cliquez ici pour activer la caméra</p>
            <canvas id="out-canvas" width="50" height="50" style="border: solid black 1px"></canvas><br><br>
            <input type="file" onchange="handleFiles(this.files)" accept="image/*" capture/>
        </div>
    </div>

    <h1>Mes sondages</h1>
    <div class="col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th>Entreprise</th>
                    <th>Nom du sondage</th>
                    <th>Points</th>
                    <th>Informations</th>
                    <th>Complété</th>
                </tr>
            </thead>

            <tbody>
                <tr ng-repeat="userSurvey in userSurveys">
                    <td>{{userSurvey.organame}}</td>
                    <td>{{userSurvey.surveyname}}</td>
                    <td>{{userSurvey.points}}</td>
                    <td>{{userSurvey.infos}}</td>
                    <td>{{userSurvey.completed}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script src="js/scroll.js"></script>